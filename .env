# .env

# ==================== APPLICATION ====================
APP_NAME=Cameroon Voice AI
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ==================== API ====================
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=["*"]

# ==================== DATABASE ====================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/cameroon_ai
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
SESSION_TTL_SECONDS=86400

# ==================== GPU & COMPUTE ====================
DEVICE=cpu
# If no GPU, use: DEVICE=cpu
MIXED_PRECISION=true
MAX_BATCH_SIZE=8
USE_QUANTIZATION=true

# ==================== WHISPER (STT) ====================
WHISPER_MODEL_PATH=./models/whisper-base
WHISPER_DEVICE=cpu
# If no GPU: WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=float16

# ==================== LLAMA (LLM) ====================
LLAMA_MODEL_PATH=./models/tinyllama
LLAMA_USE_QLORA=false
LLAMA_MAX_NEW_TOKENS=512
LLAMA_TEMPERATURE=0.7
LLAMA_TOP_P=0.9
LLAMA_REPETITION_PENALTY=1.1

# ==================== COQUI TTS ====================
TTS_MODEL_PATH=./models/tts-xtts
TTS_VOCODER_PATH=./models/tts-vocoder
TTS_CONFIG_PATH=./models/tts-config
TTS_SPEAKERS_PATH=./models/tts-speakers
TTS_SAMPLE_RATE=22050

# ==================== AUDIO PROCESSING ====================
AUDIO_SAMPLE_RATE=16000
AUDIO_MAX_DURATION_SECONDS=300
AUDIO_MAX_SIZE_MB=25
AUDIO_STORAGE_PATH=./data/raw/audio/bameka
AUDIO_CLEANUP_HOURS=24

# ==================== BOTPRESS ====================
BOTPRESS_URL=https://api.botpress.cloud
BOTPRESS_BOT_ID=127f00ab-fe4f-41d0-a0ba-86140cfef8e5
BOTPRESS_API_TOKEN=bp_bak_r6ABp1sX-Om73eyKg74EK-sfkMleZ4oRqfmz
BOTPRESS_WEBHOOK_SECRET=https://webhook.botpress.cloud/9621381e-9ce5-4189-82bb-6f133bdd763e

# ==================== YOUR API ====================
API_PUBLIC_URL=http://localhost:8000

# ==================== MONITORING ====================
SENTRY_DSN=
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ==================== TIMEOUTS ====================
TRANSCRIPTION_TIMEOUT=60
LLM_TIMEOUT=30
TTS_TIMEOUT=45
WHATSAPP_TIMEOUT=10